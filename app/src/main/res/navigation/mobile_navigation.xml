<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/navigation_library">

    <fragment
            android:id="@+id/navigation_library"
            android:name="dev.rodosteam.questtime.screen.common.library.LibraryFragment"
            android:label="@string/title_library"
            tools:layout="@layout/fragment_library">
        <action android:id="@+id/action_navigation_library_to_navigation_external"
                app:destination="@id/navigation_external"/>
    </fragment>

    <fragment
            android:id="@+id/navigation_external"
            android:name="dev.rodosteam.questtime.screen.common.external.ExternalFragment"
            android:label="@string/title_external"
            tools:layout="@layout/fragment_external">
        <action android:id="@+id/action_navigation_external_to_navigation_editor"
                app:destination="@id/navigation_editor"/>
    </fragment>

    <fragment
            android:id="@+id/navigation_editor"
            android:name="dev.rodosteam.questtime.screen.common.editor.EditorFragment"
            android:label="@string/title_editor"
            tools:layout="@layout/fragment_editor">
        <action android:id="@+id/action_navigation_editor_to_navigation_settings"
                app:destination="@id/navigation_settings"/>
    </fragment>

    <fragment
            android:id="@+id/navigation_settings"
            android:name="dev.rodosteam.questtime.screen.common.settings.SettingsFragment"
            android:label="@string/title_settings"
            tools:layout="@layout/fragment_settings"/>
</navigation>